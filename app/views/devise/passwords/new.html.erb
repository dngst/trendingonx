<% content_for :title, "Password reset" %>

<div class="max-w-md">
  <h2 class="text-2xl font-semibold mb-4">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

    <div class="mt-4">
      <%= f.label :email, class: "block font-semibold text-gray-800" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-lg w-full px-3 py-2 border border-gray-300 mt-2 focus:outline-none focus:border-black focus:ring-black" %>
      <%= render "devise/shared/form_error", field: :email %>
    </div>

    <div class="mt-4">
      <%= f.submit "Send me reset password instructions", class: "rounded-lg bg-black font-medium text-white px-4 py-2 hover:cursor-pointer" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
