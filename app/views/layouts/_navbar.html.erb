<div data-controller="navbar" data-action="resize@window->navbar#closeOnBigScreen" class="navbar">
  <nav class="bg-white fixed top-0 w-full">
    <div class="container mx-auto flex items-center justify-between p-6">
      <div class="flex items-center">
        <%= link_to root_path do %>
          <p class="text-black text-2xl font-semibold hidden lg:flex py-2">
            Trending on X
          </p>
        <% end %>
      </div>

      <div class="flex items-center justify-center flex-grow">
        <%= render "search/form" %>
      </div>

      <div class="flex items-center space-x-6 ml-auto">
        <div class="hidden lg:flex">
          <%= link_to "Add topic", new_topic_path, class: "mr-5 py-2" %>
          <%= link_to "Plugs", plug_path, class: "mr-5 py-2" %>

          <% if user_signed_in? %>
            <%= render "layouts/profile_dropdown" %>
          <% else %>
            <%= link_to "Sign in", new_user_session_path, class: "bg-black text-white rounded-full py-2 px-4" %>
          <% end %>
        </div>

        <div class="lg:hidden" role="button" data-action="click->navbar#toggle">
          <% cache("bx-menu.svg") do %>
            <%= image_tag "bx-menu.svg", alt: "Menu", class: "h-8 w-8", draggable:false %>
          <% end %>
        </div>
      </div>
    </div>
  </nav>
  <%= render "layouts/mobile_nav" %>
</div>
