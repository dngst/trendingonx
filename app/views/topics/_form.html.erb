<%= form_with(model: topic, class: "contents") do |form| %>
  <div class="my-5">
    <%= form.label :title do %>
      Title <span class="text-red-500">*</span>
    <% end %>
    <%= form.text_field :title, placeholder: "Topic title", autofocus: @autofocus, class: "rounded-lg block border border-gray-300 focus:outline-none focus:border-black focus:ring-black px-3 py-2 mt-2 w-full" %>
    <%= render "shared/form_error", topic: topic, field: :title %>
  </div>

  <div class="my-5">
    <%= form.label :x_link do %>
      X link <span class="text-red-500">*</span>
    <% end %>
    <%= form.text_field :x_link, placeholder: "Link to relevant X post", class: "rounded-lg block border border-gray-300 focus:border-black focus:ring-black focus:outline-none px-3 py-2 mt-2 w-full" %>
    <%= render "shared/form_error", topic: topic, field: :x_link %>
  </div>

  <div class="my-5">
    <%= form.label :hashtag do %>
      Hashtag <span class="text-red-500">*</span>
    <% end %>
    <%= form.text_field :hashtag, placeholder: "Hashtag without '#'", class: "rounded-lg block border border-gray-300 focus:border-black focus:ring-black focus:outline-none px-3 py-2 mt-2 w-full" %>
    <%= render "shared/form_error", topic: topic, field: :hashtag %>
  </div>

  <%= form.hidden_field :user_id, value: current_user.id %>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-black text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
