<% content_for :title, @topic.title %>

<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @topic %>

    <div class="flex items-center justify-center">
      <% if user_topics(@topic) %>
        <%= link_to "Edit topic", edit_topic_path(@topic),
          class: "rounded-lg py-2 mr-3 px-4 ml-2 text-gray-500 border border-gray-500 hover:bg-gray-100 inline-block font-medium focus:outline-none" %>
        <%= button_to "Delete topic", topic_path(@topic),
          method: :delete, data: { turbo_confirm: "Delete topic?" },
          class: "rounded-lg py-2 px-4 text-red-500 border border-red-500 hover:bg-red-100 font-medium focus:outline-none" %>
      <% else %>
        <% if user_signed_in? %>
          <%= render "topics/downvote_counter", counter: @topic.downvotes, topic: @topic %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
