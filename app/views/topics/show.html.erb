<div class="mx-auto md:w-2/3 w-full flex mb-4">
  <div class="mx-auto">
    <%= render @topic %>

    <div class="flex">
      <% if user_topics(@topic) %>
        <%= button_to "Delete topic", topic_path(@topic), method: :delete, data: { turbo_confirm: "Delete topic?" }, class: "mr-2 py-2 px-4 bg-gray-100 font-medium" %>
        <%= link_to "Edit topic", edit_topic_path(@topic), class: "py-2 mr-3 ml-2 px-4 bg-gray-100 inline-block font-medium" %>
      <% end %>

      <% if user_signed_in? %>
        <%= render "topics/downvote_counter", counter: @topic.downvotes, topic: @topic %>
      <% end %>
    </div>
  </div>
</div>
